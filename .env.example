# ===========================================
# FLOR D'COUTELLERIE - Variables d'Environnement
# ===========================================
# Copie ce fichier en .env.local et remplis les valeurs

# -------------------------------------------
# SANITY CMS
# -------------------------------------------
# Project ID visible dans sanity.io/manage
NEXT_PUBLIC_SANITY_PROJECT_ID=

# Dataset (généralement "production" ou "development")
NEXT_PUBLIC_SANITY_DATASET=production

# Version de l'API Sanity (format: YYYY-MM-DD)
NEXT_PUBLIC_SANITY_API_VERSION=2024-06-01

# Token d'écriture pour les webhooks (Settings > API > Tokens)
SANITY_WRITE_TOKEN=

# Secret pour valider les webhooks Sanity (tu le définis toi-même)
SANITY_WEBHOOK_SECRET=

# -------------------------------------------
# STRIPE
# -------------------------------------------
# Clé secrète (commence par sk_live_ ou sk_test_)
STRIPE_SECRET_KEY=

# Secret du webhook Stripe (commence par whsec_)
# Dashboard Stripe > Developers > Webhooks > Signing secret
STRIPE_WEBHOOK_SECRET=

# -------------------------------------------
# RESEND (Emails transactionnels)
# -------------------------------------------
# Clé API Resend (commence par re_)
RESEND_API_KEY=

# Email d'envoi (doit être vérifié dans Resend)
RESEND_FROM_EMAIL=contact@flordcoutellerie.fr

# -------------------------------------------
# MUX (Vidéos)
# -------------------------------------------
# Clé API Mux
MUX_TOKEN_SECRET=
MUX_TOKEN_ID=

# -------------------------------------------
# APPLICATION
# -------------------------------------------
# URL de production (sans slash final)
NEXT_PUBLIC_APP_URL=https://flordcoutellerie.fr
